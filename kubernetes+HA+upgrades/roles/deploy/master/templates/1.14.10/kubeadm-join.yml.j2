---
# {{ ansible_managed }}
apiVersion: kubeadm.k8s.io/v1beta1
kind: JoinConfiguration
nodeRegistration:
  name: {{ ansible_fqdn }}
discovery:
  bootstrapToken:
    apiServerEndpoint: localhost:{{ CONTROL_PLANE_PORT }}
    token: {{ _token }}
    caCertHashes:
      - {{ _hash }}
controlPlane:
  localAPIEndpoint:
    bindPort: 6443
